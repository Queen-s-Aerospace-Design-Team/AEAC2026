{
    "name": "QADT Dev Container (PX4)",
    
    "dockerComposeFile": [
        "compose.base.yml",
        "compose.active.yml"
    ],
    
    "service": "dev",
    "workspaceFolder": "/home/qadt/${localWorkspaceFolderBasename}",
    "remoteUser": "qadt",
    "overrideCommand": true,

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true, // zsh terminal style will exist, but will only use bash
            "upgradePackages": true
        }
    },

    "customizations": {
        "vscode": {
            "settings": {
                "cmake.generator": "Ninja",
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "terminal.integrated.defaultProfile.linux": "zsh",
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
                "C_Cpp.default.includePath": [
                    "${workspaceFolder}/**",
                    "/opt/ros/humble/include/**",
                    "/usr/include/**"
                ],
                "C_Cpp.default.browse.path": [
                    "${workspaceFolder}/**",
                    "/opt/ros/humble/include/**",
                    "/usr/include/**"
                ],
                "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
                "C_Cpp.default.cStandard": "c23",
                "C_Cpp.default.cppStandard": "gnu++23"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "josetr.cmake-language-support-vscode",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "redhat.vscode-xml",
                "eamodio.gitlens"
            ]
        }
    },

    "postCreateCommand": "/bin/bash -lc 'echo Dev container ready for ROS $ROS_DISTRO under profile $PROFILE'",

    "initializeCommand": ["bash", "-lc", ".devcontainer/select_profile.sh"]
}
