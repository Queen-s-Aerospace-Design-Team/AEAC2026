{
    "name": "QADT Dev Container (PX4)",
    "dockerComposeFile": [
        "compose.base.yml",
        "compose.active.yml"
    ],
    "service": "dev",
    "overrideCommand": true,
    "workspaceFolder": "/home/qadt/${localWorkspaceFolderBasename}",
    "remoteUser": "qadt",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true, // zsh terminal style will exist, but will only use bash
            "upgradePackages": false
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                // Python
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.analysis.autoSearchPaths": true,
                "python.analysis.useLibraryCodeForTypes": true,
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.extraPaths": [
                    "/opt/ros/humble/lib/python3.10/site-packages",
                    "${workspaceFolder}/ros_ws/install/local/lib/python3.10/dist-packages",
                    "${workspaceFolder}/ros_ws/install/px4_msgs/local/lib/python3.10/dist-packages",
                    "${workspaceFolder}/ros_ws/src"
                ],
                // C++
                "C_Cpp.default.includePath": [
                    "${workspaceFolder}/ros_ws/src/**",
                    "${workspaceFolder}/ros_ws/install/px4_msgs/**",
                    "/opt/ros/humble/include/**",
                    "/usr/include/**"
                ],
                "C_Cpp.default.browse.path": [
                    "${workspaceFolder}/ros_ws/src/**",
                    "${workspaceFolder}/ros_ws/install/px4_msgs/**",
                    "/opt/ros/humble/include/**"
                ],
                "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
                "C_Cpp.default.cStandard": "c17",
                "C_Cpp.default.cppStandard": "gnu++20",
                // "C_Cpp.workspaceParsingPriority": "medium",
                // clang-format support
                "editor.defaultFormatter": "xaver.clang-format",
                "editor.formatOnSave": true,
                "C_Cpp.formatting": "clangFormat",
                "remote.downloadExtensionsLocally": true
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "josetr.cmake-language-support-vscode",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "redhat.vscode-xml",
                "eamodio.gitlens",
                "xaver.clang-format"
            ]
        }
    },
    "initializeCommand": [
        "bash",
        "-lc",
        ".devcontainer/initialize.sh"
    ],
    "postStartCommand": [
        "bash",
        "-lc",
        ".devcontainer/postStart.sh"
    ]
}